{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "cd backend && python3 manage.py collectstatic --noinput"
  },
  "deploy": {
    "preDeployCommand": ["cd backend && python3 manage.py migrate"],
    "startCommand": "cd backend && gunicorn camera101.wsgi:application --bind 0.0.0.0:$PORT",
    "healthcheckPath": "/",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE"
  }
}